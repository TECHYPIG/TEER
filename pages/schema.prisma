generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  Firstname String
  Password  String
  Surname   String
  Username  String   @unique
  Email     String   @unique
  Role      String
  Location  String
  Gender    String
  Birthday  String
  Bio       String
  CreateAt  DateTime @default(now())
  Posts     Post[]   @relation("userPosts")
  Following String []
  Block     String
}

model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  user      Users    @relation("userPosts", fields: [userId], references: [id])
  userId    String
  Comments  Comment[] 
  Like      Users     @relation("userPosts", fields: [userId], references: [id])

}

model Comment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  user      Users
  content   String
}
