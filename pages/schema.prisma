generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  Firstname   String
  Surname     String
  Username    String   @unique
  Email       String   @unique
  Password    String
  Role        String
  Location    String
  Gender      String
  Birthday    String
  Bio         String
  CreateAt    DateTime @default(now())  
  Posts       Post[]   @relation("userPosts")
  LikedPosts  Post @relation("PostLikes")
  Following   Users[] @relation("UserFollows")
  Followers   Users[]  @relation("UserFollows")
  Blocked     Users[] @default([])
}

model Post {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  userId      String
  content     String
  user        Users     @relation("userPosts", fields: [userId], references: [id])
  comments    Comment[] @relation("postComments")
  likes       Like[]    @relation("postLikes")
  createdAt   DateTime  @default(now())
}

model Comment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  postId    String
  userId    String
  user      Users    @relation("userComments", fields: [userId], references: [id])
  post      Post     @relation("postComments", fields: [postId], references: [id])
  content   String
  createdAt DateTime @default(now())
}