generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  Firstname String
  Password  String
  Surname   String
  Username  String   @unique
  Email     String   @unique
  Role      String
  Location  String
  Gender    String
  Birthday  String
  Bio       String
  CreateAt  DateTime @default(now())
  Posts     Post[]   @relation("userPosts")
  Comments  Comment[] @relation("userComments")
  Following String[] @default([])
  Block     String[] @default([])
}

model Post {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  content   String
  published Boolean   @default(false)
  createdAt DateTime  @default(now())
  likes     Users[]   @relation("likedPosts", references: [id])
  user      Users     @relation("userPosts", fields: [userId], references: [id])
  userId    String
  Comments  Comment[] @relation("postComments")
}

model Comment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  createdAt DateTime @default(now())
  user      Users    @relation("userComments", fields: [userId], references: [id])
  userId    String
  post      Post     @relation("postComments", fields: [postId], references: [id])
  postId    String
}